@model IEnumerable<Glasfy06Proyecto.Models.usuariorol>

@{
    ViewBag.Title = "Index";

}

<h2>Lista UsuarioRol</h2>

<p>
    @Html.ActionLink("Nuevo UsuarioRol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Glasfy06Proyecto.Controllers.UsuarioRolController.NombreUsuario(item.idUsuario)
            </td>
            <td>
                @Glasfy06Proyecto.Controllers.UsuarioRolController.NombreRol(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detailles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{

    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>

}