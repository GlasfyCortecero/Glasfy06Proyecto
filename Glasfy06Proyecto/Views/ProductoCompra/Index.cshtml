@model IEnumerable<Glasfy06Proyecto.Models.producto_compra>

@{
    ViewBag.Title = "Index";

}

<h2>todas las compras del producto</h2>

<p>
    @Html.ActionLink("Nuevo Producto Compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Compra
        </th>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Glasfy06Proyecto.Controllers.ProductoCompraController.CompraProducto(item.id_compra)
            </td>
            <td>
                @Glasfy06Proyecto.Controllers.ProductoCompraController.NombreProducto(item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{

    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>

}
