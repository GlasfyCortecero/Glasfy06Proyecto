@model Glasfy06Proyecto.Models.usuario

@{
    ViewBag.Title = "Details";
    var nombreUsuario = Model.nombre;
}

<h2>Detalles Usuario @nombreUsuario</h2>
<p>Ver informacion</p>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Apellido Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.apellido)
        </dd>

        <dt>
            Fecha de Nacimiento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_nacimiento)
        </dd>

        <dt>
            Correo Usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>        
    </dl>
</div>
<p>
    @Html.ActionLink("Editar Usuario " +  @nombreUsuario, "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar lista", "Index")
</p>
